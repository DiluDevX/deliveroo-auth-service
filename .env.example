# Server Configuration
PORT=3000
NODE_ENV=development

# Database (PostgreSQL via AWS RDS or local)
# REQUIRED in all environments
DATABASE_URL="postgresql://user:password@localhost:5432/mydb?schema=public"

# JWT Configuration
# REQUIRED in all environments
JWT_SECRET=example-secret
JWT_EXPIRES_IN=15
JWT_REFRESH_EXPIRES_IN=7
JWT_RESET_PASSWORD_EXPIRES_IN=1

# Auth Service (if validating tokens via external service)
AUTH_SERVICE_URL=http://localhost:3001
# REQUIRED in all environments
AUTH_API_KEY=example-key

# Logging
LOG_LEVEL=info

# Rate Limiting Configuration
# Optional - uses environment-specific defaults if not provided
# 
# Default behavior by environment:
# - Production: 100 requests per 15 minutes
# - Development: 1000 requests per 15 minutes
# - Test: 10000 requests per 1 minute
#
# Time window in milliseconds (example: 900000 = 15 minutes)
RATE_LIMIT_WINDOW_MS=900000
#
# Maximum requests allowed per window
RATE_LIMIT_MAX=100

# Email Configuration
# IMPORTANT: Only REQUIRED in production environment
# In development/test, sensible defaults are used if not provided:
# - COMPANY_NAME: "Local Development"
# - COMPANY_EMAIL: "noreply@localhost"
# - LOGO_URL: "https://via.placeholder.com/200?text=Logo"
# - SUPPORT_EMAIL: "support@localhost"
# - APP_URL: "http://localhost:3000"
# - RESEND_API_KEY: "test-key-development-only"

# Email: Company branding (optional in dev/test, required in production)
COMPANY_NAME="Your Company Name"
COMPANY_EMAIL="noreply@example.com"

# Email: Logo URL (optional in dev/test, required in production)
LOGO_URL="https://example.com/logo.png"

# Email: Support contact (optional in dev/test, required in production)
SUPPORT_EMAIL="support@example.com"

# Email: Application URL (optional in dev/test, required in production)
APP_URL="http://localhost:3000"

# Email: Resend API Key for sending emails (optional in dev/test, required in production)
# Get your key from https://resend.com
RESEND_API_KEY="re_xxxxxxxxxxxxxxxxxxxx"

# Service Configuration
# REQUIRED in all environments
SERVICE_NAME="auth-service"
