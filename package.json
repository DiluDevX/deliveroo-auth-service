{
  "name": "deliveroo-auth-service",
  "version": "1.0.0",
  "description": "Microservice for authentication",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "dev": "doppler run -- nodemon src/server.ts",
    "start": "node dist/server.js",
    "format:fix": "prettier --write .",
    "lint": "eslint src",
    "lint:fix": "eslint --fix src",
    "prisma:generate": "doppler run -- prisma generate",
    "prisma:migrate:development": "doppler run -- prisma migrate dev",
    "prisma:migrate:production": "doppler run -- prisma migrate deploy",
    "prisma:studio": "doppler run -- prisma studio",
    "prisma:push": "doppler run -- prisma db push",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "microservice",
    "express",
    "prisma",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/adapter-pg": "^7.3.0",
    "@prisma/client": "^6.2.0",
    "bcrypt": "^5.1.1",
    "dayjs": "^1.11.19",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^8.2.1",
    "http-status-codes": "^2.3.0",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^8.0.1",
    "pg": "^8.17.2",
    "uuid": "^11.0.5",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.10.5",
    "@types/nodemailer": "^7.0.10",
    "@types/pg": "^8.16.0",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^10.0.0",
    "eslint": "^9.18.0",
    "globals": "^15.14.0",
    "nodemon": "^3.1.9",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "prettier": "3.4.2",
    "prisma": "^6.2.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  }
}
